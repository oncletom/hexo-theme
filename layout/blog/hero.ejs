<article class="article container" id="latest-writing" lang="<%= post.lang || config.language %>">
  <div class="cover">
    <% if (post.cover) { %><img src="<%= coverUrl(post, config) %>" alt="" class="is-responsive is-cover"><% } %>
  </div>

  <h1><a href="<%= url_for(post.path) %>" rel="permalink"><%= post.title %></a></h1>

  <ul class="metadata is-inline is-dotted">
    <li><time class="dt-published" datetime="<%= post.date.toISOString() %>">
      <%= date(post.date) %>
    </time></li>
    <li><%= readingTime(post.content).text %></li>
  </ul>

  <div class="summary"><%- post.description || post.excerpt %></div>

  <p class="read-more next">
    <a href="<%= url_for(post.path) %>"><%= _p('read_more.article') %></a>
  </p>

  <aside>
    <h2><%= _p('more.writings') %></h2>

    <ul class="is-discrete with-metadata">
      <% aside.forEach(post => { %>
      <li>
        <time class="metadata" datetime="<%= date_xml(post.date) %>"><%= date(post.date) %></time>
        <a href="<%= url_for(post.path) %>" rel="permalink"><%= post.title %></a>
      </li>
      <% }) %>
    </ul>
  </aside>
</article>
