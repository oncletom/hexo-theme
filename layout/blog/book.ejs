<article class="article with-aside container" id="book-nodejs" lang="<%= page.lang || config.language %>">
  <header class="cover">
    <% if (page.cover) { %><img src="<%= coverUrl(page, config) %>" alt="" class="is-responsive is-cover"><% } %>
  </header>

  <section>
    <h1><a href="<%= url_for(page.url) %>"><%= page.title %></a></h1>

    <div class="summary"><%- markdown(page.description) %></div>
  </section>

